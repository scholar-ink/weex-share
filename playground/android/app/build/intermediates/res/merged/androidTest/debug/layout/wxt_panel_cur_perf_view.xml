<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/text_version_sdk"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="weex sdk version:???"/>

        <TextView
            android:id="@+id/text_sdk_init_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="sdk init time:?ms"/>


        <TextView
            android:id="@+id/text_total_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="totalTime:?ms"/>

        <TextView
            android:id="@+id/text_screen_render_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="firstScreenRenderTime:?ms"/>

        <TextView
            android:id="@+id/text_network_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="networktime:?ms"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/overlay_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:scrollbars="none"
        />

</LinearLayout>